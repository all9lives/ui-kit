{
  "name": "@node/ui-kit",
  "version": "1.1.7",
  "main": "./lib/main.js",
  "private": true,
  "scripts": {
    "prepare": "npm run build",
    "start:native": "node node_modules/react-native/local-cli/cli.js start",
    "precommit": "lint-staged",
    "build": "webpack && babel src/ --out-dir native/ --copy-files",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint:js": "standard --verbose | snazzy",
    "lint:js-fix": "standard --fix --verbose | snazzy",
    "lint:css": "stylelint './src/**/*.js'",
    "typecheck": "flow",
    "generate:component": "babel-node helpers/scripts/run generator/component",
    "generate:story": "babel-node helpers/scripts/run generator/story",
    "storybook:web": "start-storybook -p 6006 -c storybook/web",
    "build-storybook:web": "build-storybook -c storybook/web",
    "storybook:native": "storybook start -p 7007 -c storybook/native",
    "android-reverse": "adb reverse tcp:7007 tcp:7007",
    "check-update": "yarn upgrade-interactive --latest"
  },
  "peerDependencies": {
    "react": "16.3.1",
    "react-native": "0.55.2",
    "react-native-fast-image": "^2.2.4"
  },
  "dependencies": {
    "flow-bin": "^0.69.0",
    "prop-types": "^15.6.1",
    "ramda": "^0.25.0",
    "react-primitives": "^0.5.0",
    "recompose": "^0.26.0",
    "styled-components": "^3.2.5",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "@storybook/react": "^3.4.0",
    "@storybook/react-native": "^3.4.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-jest": "^22.4.3",
    "babel-preset-react-native": "4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint-plugin-flowtype": "^2.46.1",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "jest-styled-components": "^5.0.1",
    "lint-staged": "^7.0.4",
    "ncu": "^0.2.1",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-native": "0.55.2",
    "react-native-fast-image": "^4.0.0",
    "react-test-renderer": "16.3.1",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-styled-components": "^1.3.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "preset": "react-native",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./helpers/jest/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "helpers/",
      "lib/",
      "native/",
      "generator/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "helpers/"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "flow/"
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": "stylelint-config-standard",
    "syntax": "scss",
    "rules": {
      "no-empty-source": null
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "stylelint",
      "git add"
    ]
  }
}
