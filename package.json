{
  "name": "@fn/ui-kit",
  "version": "1.1.3",
  "main": "./lib/main.js",
  "private": true,
  "scripts": {
    "prepare": "npm run build",
    "start:native": "node node_modules/react-native/local-cli/cli.js start",
    "precommit": "lint-staged",
    "build": "webpack && babel src/ --out-dir native/",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint:js": "standard --verbose | snazzy",
    "lint:js-fix": "standard --fix --verbose | snazzy",
    "lint:css": "stylelint './src/**/*.js'",
    "typecheck": "flow",
    "generate:component": "babel-node helpers/scripts/run generator/component",
    "generate:story": "babel-node helpers/scripts/run generator/story",
    "storybook:web": "start-storybook -p 6006 -c storybook/web",
    "build-storybook:web": "build-storybook -c storybook/web",
    "storybook:native": "storybook start -p 7007 -c storybook/native",
    "check-update": "yarn upgrade-interactive --latest"
  },
  "peerDependencies": {
    "react": "16.0.0-beta.5",
    "react-native": "0.49.1"
  },
  "dependencies": {
    "flow-bin": "^0.56.0",
    "prop-types": "^15.6.0",
    "ramda": "^0.25.0",
    "react-primitives": "^0.4.3",
    "recompose": "^0.26.0",
    "styled-components": "^2.2.1"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.12",
    "@storybook/react-native": "^3.2.12",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-jest": "^21.2.0",
    "babel-preset-react-native": "4.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.1.2",
    "eslint-plugin-flowtype": "^2.39.1",
    "husky": "^0.14.3",
    "jest": "21.2.1",
    "jest-styled-components": "^4.7.0",
    "lint-staged": "^4.2.3",
    "ncu": "^0.2.1",
    "react": "16.0.0-beta.5",
    "react-dom": "16.0.0",
    "react-native": "0.49.3",
    "react-test-renderer": "16.0.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-processor-styled-components": "^1.0.0",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "preset": "react-native",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./helpers/jest/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "helpers/",
      "lib/",
      "native/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "helpers/"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "flow/"
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": "stylelint-config-standard",
    "syntax": "scss",
    "rules": {
      "no-empty-source": null
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "stylelint",
      "git add"
    ]
  }
}
