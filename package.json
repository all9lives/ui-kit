  "devDependencies": {
    "@storybook/react": "^3.1.9",
    "@storybook/react-native": "^3.1.9",
    "babel-jest": "20.0.3",
    "babel-preset-react-native": "2.1.0",
    "husky": "^0.14.3",
    "jest": "20.0.4",
    "lint-staged": "^4.0.2",
    "react-test-renderer": "^15.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "jest": {
    "preset": "react-native"
  },
